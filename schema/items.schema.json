{
    "$schema": "https://json-schema.org/draft-07/schema",
    "$id": "items.schema.json",
    "title": "Items",
    "type": "array",
    "items": {
      "type": "object",
      "properties": {
        "id": {
          "type": "integer"
        },
        "name": {
          "type": "string"
        },
        "slot": {
          "enum": [
            "Head",
            "Chest",
            "Shoulder",
            "Mainhand",
            "Offhand",
            "Cape"
          ]
        },
        "type": {
          "enum": [
            "Sword",
            "Club",
            "Quiver",
            "Shield",
            "Scepter",
            "Shoulder",
            "Head",
            "Cape",
            "Bow"
          ]
        },
        "x": {
          "type": "integer",
          "minimum": 0
        },
        "y": {
          "type": "integer",
          "minimum": 0
        },
        "width": {
          "type": "integer",
          "minimum": 1,
          "maximum": 2
        },
        "height": {
          "type": "integer",
          "minimum": 1,
          "maximum": 4
        },
        "modifiers": {
          "type": "array",
          "items": {
            "type": "object",
            "description": "Value modifier",
            "oneOf": [{
              "type": "object",
              "properties": {
                "attribute": {
                  "type": "string",
                  "enum": [
                    "Health",
                    "MaxHealth",
                    "Speed",
                    "Damage",
                    "MinDamage",
                    "MaxDamage",
                    "BaseAttackSpeed"
                  ]
                },
                "value": {
                  "type": "number"
                },
                "scope": {
                  "type": "string",
                  "enum": [
                    "Flat",
                    "PercentAdd",
                    "PercentMult",
                    "Set"
                  ]
                }
              }
            }, {
              "type": "object",
              "description": "Trigger modifier",
              "properties": {
                "attribute": {
                  "const": "Trigger"
                },
                "value": {
                  "type": "string",
                  "enum": [
                    "OnAttack",
                    "OnShot",
                    "OnCast"
                  ]
                },
                "scope": {
                  "const": "Set"
                }
              }
            }],
            "required": [ "attribute", "value", "scope" ]
          }
        }
      },
      "required": [ "id", "name", "slot", "type", "x", "y", "width", "height" ]
    }
  }
  
  