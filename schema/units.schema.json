{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "array",
    "items": {
        "type": "object",
        "properties": {
            "id": {
                "type": "integer"
            },
            "name": {
                "type": "string"
            },
            "head": {
                "type": "integer"
            },
            "x": {
                "type": "integer"
            },
            "y": {
                "type": "integer"
            },
            "chest": {
                "type": "integer"
            },
            "mainShoulder": {
                "type": "integer"
            },
            "offShoulder": {
                "type": "integer"
            },
            "mainhand": {
                "type": "integer"
            },
            "offhand": {
                "type": "integer"
            },
            "cape": {
                "type": "integer"
            },
            "inventory": {
                "type": "array",
                "items": {
                    "type": "integer"
                }
            },
            "abilities": {
                "type": "array",
                "items": {
                    "type": "object",
                    "properties": {
                        "type": {
                            "type": "string",
                            "oneOf": [{
                                "const": "Mainhand"
                            }, {
                                "const": "Offhand"
                            }, {
                                "const": "Head"
                            }, {
                                "const": "Chest"
                            }, {
                                "const": "MainShoulder"
                            }, {
                                "const": "OffShoulder"
                            }, {
                                "const": "Cape"
                            }]                            
                        },
                        "items": {
                            "type": "array",
                            "items": {
                                "type": "integer"
                            }
                        }
                    },
                    "required": ["type", "items"]
                }
            }
        },
        "required": ["id", "x", "y", "name", "head", "chest", "mainShoulder", "offShoulder", "mainhand", "offhand", "cape", "inventory", "abilities"]
    }
}